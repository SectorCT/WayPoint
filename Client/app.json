{
  "expo": {
    "name": "WayPoint",
    "slug": "waypoint",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/waypointicon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/waypointicon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.waypoint.app",
      "buildNumber": "1",
      "config": {
        "googleMapsApiKey": "YOUR_IOS_API_KEY"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "WayPoint needs access to your location to provide real-time delivery tracking and route optimization.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "WayPoint needs access to your location to provide real-time delivery tracking and route optimization.",
        "NSCameraUsageDescription": "WayPoint needs access to your camera to capture delivery signatures.",
        "NSPhotoLibraryUsageDescription": "WayPoint needs access to your photo library to save delivery confirmations.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/waypointicon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.waypoint.app",
      "versionCode": 1,
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_ANDROID_API_KEY"
        }
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/images/waypointicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow WayPoint to use your location."
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Regular.ttf",
            "./assets/fonts/Medium.ttf",
            "./assets/fonts/SemiBold.ttf",
            "./assets/fonts/Bold.ttf"
          ]
        }
      ],
      "expo-router",
      "expo-web-browser"
    ],
    "scheme": "waypoint",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "3879b2fd-c6cc-4231-abfc-44b7e36c286d"
      }
    },
    "owner": "rkdimitrov"
  }
}
